    <fileset name="jobfiles">
        <copy>download-era5.py.in</copy>
    </fileset>

    <substituteset name="executesub">
        <!-- Default jobscript substitution -->
        <iofile in="download-era5.py.in" out="download-era5.py" />
        <sub source="#PRODUCT_TYPE#" dest="$product_type" />
        <sub source="#VARIABLE#" dest="$variable" />
        <sub source="#YEAR#" dest="$year" />
        <sub source="#MONTH#" dest="$month" />
        <sub source="#DAY#" dest="$day" />
        <sub source="#TIME#" dest="$time" />
        <sub source="#FILE_NAME#" dest="$file_name" />
        <sub source="#FILE_TYPE#" dest="$file_type" />
    </substituteset>

    <step name="run_script">
        <do>module load Python/3.6.5</do>
        <use>systemParameter</use>
        <use>jobfiles</use>
        <use>executesub</use>
        <do>python3 download-era5.py</do>
        <do>mkdir -p $download_dir</do>
        <do>mv $file_name.$file_type $download_dir</do>
        </step>
    </benchmark>
